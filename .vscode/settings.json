{
  "biome.enabled": true,
  "biome.projects": [
    {
      "path": "apps/frontend",
      "configFile": "apps/frontend/biome.json"
    },
    {
      "path": "apps/backend",
      "configFile": "apps/backend/biome.json"
    },
    {
      "path": "packages/shared/constants",
      "configFile": "packages/shared/constants/biome.json"
    },
    {
      "path": "packages/shared/schemas",
      "configFile": "packages/shared/schemas/biome.json"
    },
    {
      "path": "tooling/biome",
      "configFile": "tooling/biome/biome.json"
    },
    {
      "path": "tooling/tsconfig",
      "configFile": "tooling/tsconfig/biome.json"
    }
  ],
  "cSpell.words": [
    "biomejs",
    "nestjs",
    "nextjs",
    "outdir",
    "protobuf",
    "swcrc",
    "trpc",
    "tsbuildinfo",
    "typecheck",
    "unplugin"
  ],
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[graphql]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.fixAll.biome": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.sortImports": "explicit",
    "source.removeUnused.ts": "explicit",
    "source.fixAll.ts": "explicit",
    "source.organizeImports.biome": "explicit",
    "source.sortPackageJson": "explicit"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true
}
